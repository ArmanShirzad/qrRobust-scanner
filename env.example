# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://qr_reader_user:qr_reader_password@localhost:5432/qr_reader_db
POSTGRES_DB=qr_reader_db
POSTGRES_USER=qr_reader_user
POSTGRES_PASSWORD=qr_reader_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=QR Reader Premium

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Application Configuration
APP_NAME=QR Code Reader Premium Platform
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379