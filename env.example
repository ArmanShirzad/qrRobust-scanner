# Environment variables for PostgreSQL deployment
# Copy this to .env file

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/qr_app
# Or for production:
# DATABASE_URL=postgresql://user:pass@db-host:5432/qr_production

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Production Settings
DEBUG=False
ENVIRONMENT=production

# File Storage
UPLOAD_DIR=/var/www/qr-app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com